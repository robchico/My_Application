<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#0c2d4e"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            style="@style/AppTheme"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1CustamD"
                android:layout_width="130dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/borde2"
                android:src="@drawable/fotoentre2aspx" />

            <TextView
                android:id="@+id/textView2CustomD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/borde"
                android:text="Andreu Casadevall Guinart \n\t01/01/1962 \nSanta Coloma de Gramenet \n\t(Barcelona)"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/TextView4CustomD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Trayectoria:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textView3CustomD"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/borde"
                android:text="1989-90 : CajaBadajoz\n1990-93 : Ferrys Llíria\n1993-94 : Dyc Lugo\n1994-95 : Somontano Huesca\n1995-96 : Grupo Agb Huesca\n1996-97 : Baloncesto Fuenlabrada\n1998-01 : CB Lucentum Alicante (LEB)\n2001-02 : CB Ciudad de Huelva (LEB)\n2002-04 : Leche Río Breogán (ACB)\n2008-15 : Autocid Ford Burgos (LEB Oro)\n2015- actualidad : San Pablo Inmobiliaria (LEB Oro)"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView5CustomD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Palmares:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textView6CustomD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/borde"
                android:text="Ascenso del CB Llíria a Liga ACB en la temporada 1990-91.\n\nCampeón de la LEB con el CB Lucentum Alicante en la temporada 1999-2000, logra el ascenso a la Liga ACB.\n\nCampeón de la LEB Oro con el Club Baloncesto Atapuerca en la temporada 2012-2013.\n\nAscenso del Club Baloncesto Atapuerca en la temporada 2013-2014.\n\nCampeón de la LEB Oro con el Club Baloncesto Atapuerca en la temporada 2014-2015."
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/uno"
    android:orientation="vertical" >

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Act./Desac. lector de noticias Leb Oro"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/lstData"
            android:layout_width="547dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/borde3" >

        </ListView>

        <LinearLayout
            android:layout_width="422dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/ButtonVirtual"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/button2"
                android:text="@string/virtual"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/ButtonClasif"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/button2"
                android:text="@string/clasificaci_n"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/ButtonRankigs"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/button2"
                android:text="@string/rankings"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/ButtonCalendario"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/button2"
                android:text="@string/calendario"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/ButtonPlantilla"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/button2"
                android:text="@string/plantilla"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/ButtonInfo"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/button2"
                android:text="@string/info_club"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill_vertical" />

</LinearLayout>

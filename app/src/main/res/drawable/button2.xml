<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#ffa700" />
      <stroke
          android:width="5dp"
          android:color="#20f8f6" />
      <corners
          android:radius="6dp" /> 
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#0a80d8"
          android:endColor="#d87827"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#ffa700" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
</selector>
